<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.gsein.system.mapper.SystemUserMapper">
    <sql id="baseGet">
        select id,
               username,
               password,
               salt,
               nickname,
               gender,
               email,
               mobile,
               dept_id,
               status
        from sys_user
    </sql>

    <!--通过用户名获取用户-->
    <select id="getUserByUsername" resultType="systemUser">
        <include refid="baseGet"/>
        where username = #{username}
        and is_deleted = 0
    </select>

    <!--保存系统用户-->
    <update id="update" parameterType="systemUser">
        update sys_user
        <set>
            <if test="password!=null and password!=''">
                password = #{password},
            </if>
            <if test="salt!=null and salt!=''">
                salt = #{salt},
            </if>
            <if test="nickname!=null and nickname!=''">
                nickname = #{nickname},
            </if>
            <if test="gender!=null and gender!=''">
                gender = #{gender},
            </if>
            <if test="email!=null and email!=''">
                email = #{email},
            </if>
            <if test="mobile!=null and mobile!=''">
                mobile = #{mobile},
            </if>
            <if test="deptId!=null and deptId!=''">
                dept_id = #{deptId},
            </if>
            <if test="status!=null and status!=''">
                status = #{status},
            </if>
            updated_time = current_timestamp()
        </set>
        where username = #{username} and is_deleted = 0
    </update>

    <!--更新系统用户信息-->
    <insert id="save" parameterType="systemUser" useGeneratedKeys="true">
        insert into sys_user (username, password, salt, nickname, gender, email, mobile, dept_id, status)
        values (#{username}, #{password}, #{salt},#{nickname}, #{gender}, #{email}, #{mobile}, #{deptId}, #{status})
    </insert>

    <!-- 根据条件查询 -->
    <select id="getByConditions" parameterType="map" resultType="systemUser">
        <include refid="baseGet"/>
        where is_deleted = 0
    </select>

</mapper>

